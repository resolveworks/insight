{
	"name": "insight",
	"version": "0.1.0",
	"description": "Local-first P2P document search for journalists",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest",
		"test:run": "vitest run",
		"tauri": "tauri",
		"tauri:dev": "tauri dev",
		"tauri:build": "tauri build",
		"lint": "eslint .",
		"format": "prettier --write .",
		"prepare": "husky"
	},
	"lint-staged": {
		"*.{js,ts,svelte}": [
			"eslint --fix",
			"prettier --write"
		],
		"*.{json,css,md,html}": [
			"prettier --write"
		]
	},
	"license": "MIT",
	"dependencies": {
		"@tauri-apps/api": "^2",
		"@tauri-apps/plugin-dialog": "^2.4.2",
		"@tauri-apps/plugin-opener": "^2"
	},
	"devDependencies": {
		"@eslint/js": "^9.39.2",
		"@sveltejs/adapter-static": "^3.0.10",
		"@sveltejs/kit": "^2.49.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/vite": "^4.1.18",
		"@tauri-apps/cli": "^2",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/svelte": "^5.2.10",
		"@testing-library/user-event": "^14.6.1",
		"eslint": "^9.39.2",
		"eslint-plugin-svelte": "^3.13.1",
		"globals": "^16.5.0",
		"husky": "^9.1.7",
		"jsdom": "^27.3.0",
		"lint-staged": "^16.2.7",
		"prettier": "^3.7.4",
		"prettier-plugin-svelte": "^3.4.1",
		"svelte": "^5.46.0",
		"svelte-check": "^4.3.5",
		"tailwindcss": "^4.1.18",
		"typescript": "~5.9.3",
		"typescript-eslint": "^8.50.1",
		"vite": "^7.3.0",
		"vitest": "^4.0.16"
	}
}
